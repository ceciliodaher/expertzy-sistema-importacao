{
  "name": "expertzy-sistema-importacao",
  "version": "1.0.0",
  "description": "Sistema Brasileiro de Tributação e Precificação de Importação - Expertzy",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:fase1": "playwright test tests/e2e/fase1-foundation",
    "test:e2e:fase2": "playwright test tests/e2e/fase2-incentivos-entrada",
    "test:e2e:fase3": "playwright test tests/e2e/fase3-incentivos-saida",
    "test:e2e:fase4": "playwright test tests/e2e/fase4-dashboard",
    "test:e2e:fase5": "playwright test tests/e2e/fase5-regimes",
    "test:e2e:fase6": "playwright test tests/e2e/fase6-integracao",
    "test:xml-real": "playwright test xml-real-processing",
    "test:logs": "playwright test log-validation",
    "test:init": "playwright test system-initialization",
    "test:performance": "playwright test --project=performance",
    "test:memory": "playwright test tests/e2e/memory",
    "test:coverage": "playwright test --project=coverage",
    "build": "vite build",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "format:check": "prettier --check src/**/*.js",
    "preview": "vite preview",
    "serve": "vite preview --port 8000",
    "legacy:dev": "node server.legacy.js",
    "test:vite": "npm run build && npm run preview & sleep 3 && playwright test && pkill -f 'vite preview'",
    "setup": "npm install && npx playwright install"
  },
  "dependencies": {
    "chart.js": "^4.4.1",
    "dexie": "^3.2.7",
    "exceljs": "^4.4.0",
    "jspdf": "^2.5.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-legacy": "^7.2.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "express": "^4.18.2",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "importacao",
    "tributacao",
    "brasil",
    "icms",
    "precificacao",
    "fiscal",
    "incentivos"
  ],
  "author": "Expertzy System",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/ceciliodaher/expertzy-sistema-importacao.git"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
